
<%- include('headPage.ejs') %>

<h3 class="text-center">Please Sign in</h3>


<p class="text-danger mx-auto col-6">
    <% if( ERROR !== '' && ERROR !== undefined) { %>
        <%= ERROR %>
    <% }%>
</p>

<p class="text-success mx-auto col-6">
    <% if( SUCCESS !== '' && SUCCESS !== undefined) { %>
        <%= SUCCESS %>
    <% }%>
</p>


<form method="post" action="/">
    <div class="mx-auto col-6">
        <input type="email" class="form-control" id="email-input" placeholder="Email address" name="email" >
    </div>
    <br>
    <div class="mx-auto col-6">
        <input type="text" class="form-control" id="password-input"  name="password" placeholder="Password">
    </div>
    <br>
    <div class="mx-auto col-6">
        <button type="submit" class="btn btn-primary mx-auto col-12">Sign in</button>
    </div>
    <br><br><br>
</form>
<div class="text-center">
    <p>need to <a href="/register">Register?</a></p>
</div>
</div>
</div>

<script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
        crossorigin="anonymous"
></script>
</body>
</html>
