<%- include('headPage.ejs') %>

<h3 class="text-center">Please Register</h3>

<div class="mx-auto col-6">
    <p class="text-danger">
        <% if( ERROR !== '' && ERROR !== undefined) { %>
            <%= ERROR %>
        <% }%>
    </p>
</div>

<form action="/password" method="post">
    <div class="form-floating mx-auto col-6">
        <input type="email" id="emailAddress"class="form-control text-white bg-dark" placeholder="Email address" name="emailAddress" maxlength="32" minlength="3" required value= <%= emailAddress %>>
        <label for="emailAddress">Email Address</label>
    </div>
    <br>
    <div class="form-floating mx-auto col-6">
        <input type="text" class="form-control text-white bg-dark" id="firstname" name="firstname" placeholder="First Name"   pattern="([A-Za-z])+" maxlength="32" minlength="3" required value=<%= firstname %>>
        <label for="firstname">first Name</label>
    </div>
    <br>
    <div class="form-floating mx-auto col-6">
        <input type="text" class="form-control text-white bg-dark" id="lastname" name="lastname" placeholder="Last Name"   pattern="([A-Za-z])+" maxlength="32" minlength="3" required value=<%= lastname %>>
        <label for="lastname">last Name</label>
    </div>
    <br>
    <div class="mx-auto col-6">
        <button type="submit" class="btn btn-primary mx-auto col-12">Next</button>
    </div>
    <br><br><br>
</form>
<div class="text-center">
    <p>already registered? go to <a href="./">login</a> page</p>
</div>
</div>
</div>

<script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
        crossorigin="anonymous"
></script>
</body>
</html>
