
<%- include('headPage.ejs') %>

<h3 class="text-center">Please Register</h3>
<div class="mx-auto col-6">
    <p class="text-danger">
        <% if( ERROR !== '' && ERROR !== undefined) { %>
            <%= ERROR %>
        <% }%>
    </p>
</div>

<form action="/login" method="post">

    <div class="form-floating mx-auto col-6">
        <input type="password" class="form-control text-white bg-dark"  id="floatingPassword" placeholder="Password"  name="Password" maxlength="32" minlength="3" required>
        <label for="floatingPassword">Password</label>
    </div>

    <br>

    <div class="form-floating mx-auto col-6">
        <input type="password" class="form-control text-white bg-dark" id="floatingConfirmPassword" placeholder="Confirm Password" name="ConfirmPassword" maxlength="32" minlength="3" required>
        <label for="floatingConfirmPassword">Confirm Password</label>
    </div>

    <br>

    <div class="mx-auto col-2">
        <a href="/register" class="btn btn-light ">Back</a>
        <button type="submit" class="btn btn-primary mx-auto">Register</button>
    </div>

    <br><br><br>

</form>

<div class="text-center">
    <p>already registered? go to <a href="./">login</a> page</p>
</div>

</div>
</div>

<script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
        crossorigin="anonymous"
></script>
</body>
</html>
